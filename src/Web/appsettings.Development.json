{
  "ConnectionStrings": {
    "ConnectFlowDb": "Host=localhost;Database=ConnectFlow_Dev;Username=postgres;Password=postgres"
  },
  "RedisSettings": {
    "Configuration": "localhost:6379",
    "InstanceName": "ConnectFlow_Dev:"
  },
  "JwtSettings": {
    "Key": "development_key_min_256_bits_please_change_in_production_87654321",
    "Issuer": "ConnectFlow.Dev",
    "Audience": "ConnectFlow.Dev",
    "AccessTokenExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  "TenantSettings": {
    "HeaderName": "X-Tenant-Id"
  },
  "Monitoring": {
    "UseLoki": true,
    "LokiUrl": "http://localhost:3100",
    "OtlpEndpoint": "http://localhost:4317",
    "PrometheusUrl": "http://localhost:9090",
    "GrafanaUrl": "http://localhost:3000"
  },
  "RateLimiting": {
    "Enabled": true,
    "FixedWindow": {
      "PermitLimit": 300,
      "WindowSeconds": 60
    },
    "TokenBucket": {
      "TokenLimit": 100,
      "TokensPerPeriod": 20
    }
  },
  "QuartzSettings": {
    "UsePersistentStore": true,
    "SchedulerName": "ConnectFlow_Dev",
    "InstanceId": "AUTO",
    "CreateDatabaseSchema": true,
    "ConnectionStringName": "ConnectFlowDb",
    "SerializerType": "json",
    "Jobs": {
      "DataCleanupJob": {
        "CronSchedule": "0 0 2 * * ?",
        "Description": "Cleans up expired data from the system daily at 2 AM"
      },
      "ReportGenerationJob_Weekly": {
        "CronSchedule": "0 0 8 ? * MON",
        "Description": "Generates weekly reports every Monday at 8 AM",
        "JobData": {
          "ReportType": "Weekly"
        }
      },
      "ReportGenerationJob_Monthly": {
        "CronSchedule": "0 0 6 1 * ?",
        "Description": "Generates monthly reports on 1st of each month at 6 AM",
        "JobData": {
          "ReportType": "Monthly"
        }
      }
    }
  },
  "HealthChecksUI": {
    "EvaluationTimeInSeconds": 10,
    "MinimumSecondsBetweenFailureNotifications": 300
  },
  "AllowedHosts": "*",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.AspNetCore.SpaProxy": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  }
}
