@{
    var tenantName = Model["tenantName"].ToString();
    var reason = Model["reason"]?.ToString() ?? "Subscription reactivated";
    var subscriptionId = Model["subscriptionId"];
    var planName = Model["planName"]?.ToString() ?? "Current Plan";
    var reactivatedAt = Model["reactivatedAt"]?.ToString() ?? DateTimeOffset.UtcNow.ToString("MMMM dd, yyyy");
}

<!DOCTYPE html>
<html>

<head>
    <title>Subscription Reactivated</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            color: #333;
        }

        .container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
        }

        .header {
            background: #28a745;
            color: white;
            padding: 20px;
            text-align: center;
            border-radius: 8px 8px 0 0;
        }

        .content {
            background: #f8f9fa;
            padding: 30px;
            border-radius: 0 0 8px 8px;
        }

        .success-icon {
            font-size: 48px;
            color: #28a745;
            text-align: center;
            margin-bottom: 20px;
        }

        .details {
            background: white;
            padding: 20px;
            border-radius: 8px;
            margin: 20px 0;
        }

        .button {
            background: #28a745;
            color: white;
            padding: 12px 24px;
            text-decoration: none;
            border-radius: 6px;
            display: inline-block;
            margin: 20px 0;
        }

        .footer {
            text-align: center;
            margin-top: 30px;
            font-size: 14px;
            color: #666;
        }

        .success-alert {
            background: #d4edda;
            border: 1px solid #c3e6cb;
            padding: 15px;
            border-radius: 6px;
            margin: 20px 0;
            color: #155724;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="header">
            <h1>Welcome Back!</h1>
        </div>
        <div class="content">
            <div class="success-icon">ðŸŽ‰</div>

            <h2>Hello @tenantName,</h2>

            <p>Great news! Your ConnectFlow subscription has been reactivated and you now have full access to all
                features.</p>

            <div class="details">
                <h3>Reactivation Details:</h3>
                <p><strong>Subscription ID:</strong> #@subscriptionId</p>
                <p><strong>Plan:</strong> @planName</p>
                <p><strong>Reactivated On:</strong> @reactivatedAt</p>
                <p><strong>Reason:</strong> @reason</p>
            </div>

            <div class="success-alert">
                <strong>You're all set!</strong>
                <p>Your subscription is now active and all ConnectFlow features are available to you. Any previously
                    suspended services have been restored.</p>
            </div>

            <h3>What's available now:</h3>
            <ul>
                <li>Full access to your dashboard</li>
                <li>All channel connections restored</li>
                <li>User accounts reactivated</li>
                <li>Complete feature set available</li>
            </ul>

            <a href="http://localhost:3000/dashboard" class="button">Access Your Dashboard</a>

            <p>Thank you for your continued trust in ConnectFlow. We're excited to have you back and look forward to
                helping you connect with your customers.</p>

            <p>If you have any questions or need assistance getting back up to speed, our support team is here to help.
            </p>
        </div>
        <div class="footer">
            <p>Best regards,<br />The ConnectFlow Team</p>
            <p><small>This is an automated message. Please do not reply to this email.</small></p>
        </div>
    </div>
</body>

</html>
