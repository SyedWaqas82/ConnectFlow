@{
    var tenantName = Model["tenantName"].ToString();
    var gracePeriodDays = Model["gracePeriodDays"]?.ToString() ?? "7";
    var gracePeriodEndDate = Model["gracePeriodEndDate"]?.ToString();
    var subscriptionId = Model["subscriptionId"];
    var planName = Model["planName"]?.ToString() ?? "Current Plan";
}

<!DOCTYPE html>
<html>

<head>
    <title>Payment Required - Grace Period Started</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            color: #333;
        }

        .container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
        }

        .header {
            background: #ff6b35;
            color: white;
            padding: 20px;
            text-align: center;
            border-radius: 8px 8px 0 0;
        }

        .content {
            background: #f8f9fa;
            padding: 30px;
            border-radius: 0 0 8px 8px;
        }

        .urgent-icon {
            font-size: 48px;
            color: #ff6b35;
            text-align: center;
            margin-bottom: 20px;
        }

        .details {
            background: white;
            padding: 20px;
            border-radius: 8px;
            margin: 20px 0;
        }

        .button {
            background: #ff6b35;
            color: white;
            padding: 12px 24px;
            text-decoration: none;
            border-radius: 6px;
            display: inline-block;
            margin: 20px 0;
        }

        .footer {
            text-align: center;
            margin-top: 30px;
            font-size: 14px;
            color: #666;
        }

        .urgent-alert {
            background: #fff0f0;
            border: 1px solid #ffcccb;
            padding: 15px;
            border-radius: 6px;
            margin: 20px 0;
            color: #721c24;
        }

        .countdown {
            background: #ff6b35;
            color: white;
            padding: 15px;
            text-align: center;
            border-radius: 6px;
            font-size: 18px;
            font-weight: bold;
            margin: 20px 0;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="header">
            <h1>Urgent: Payment Required</h1>
        </div>
        <div class="content">
            <div class="urgent-icon">ðŸš¨</div>

            <h2>Hello @tenantName,</h2>

            <p>We were unable to process your payment, and your ConnectFlow subscription has entered a grace period.
                <strong>Immediate action is required</strong> to prevent service suspension.</p>

            @if (!string.IsNullOrEmpty(gracePeriodEndDate))
            {
                <div class="countdown">
                    Grace Period Ends: @gracePeriodEndDate
                </div>
            }
            else
            {
                <div class="countdown">
                    @gracePeriodDays Days Remaining
                </div>
            }

            <div class="details">
                <h3>Account Details:</h3>
                <p><strong>Subscription ID:</strong> #@subscriptionId</p>
                <p><strong>Plan:</strong> @planName</p>
                <p><strong>Grace Period:</strong> @gracePeriodDays days</p>
                @if (!string.IsNullOrEmpty(gracePeriodEndDate))
                {
                    <p><strong>Service Suspension Date:</strong> @gracePeriodEndDate</p>
                }
            </div>

            <div class="urgent-alert">
                <strong>What happens if payment isn't received?</strong>
                <p>If we don't receive payment within @gracePeriodDays days, your subscription will be suspended and
                    access to ConnectFlow will be restricted.</p>
            </div>

            <h3>Take action now:</h3>
            <ol>
                <li>Update your payment method</li>
                <li>Ensure sufficient funds are available</li>
                <li>Contact your bank if needed</li>
                <li>Reach out to our support team for assistance</li>
            </ol>

            <a href="http://localhost:3000/billing" class="button">Update Payment Method Now</a>

            <p><strong>Don't wait!</strong> The sooner you update your payment information, the sooner we can process
                your payment and keep your service active.</p>

            <p>If you need help or have questions about your billing, please contact our support team immediately.</p>
        </div>
        <div class="footer">
            <p>Best regards,<br />The ConnectFlow Team</p>
            <p><small>This is an automated message. Please do not reply to this email.</small></p>
        </div>
    </div>
</body>

</html>
