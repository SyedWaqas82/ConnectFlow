@{
    var tenantName = Model["TenantName"]?.ToString() ?? "Organization";
    var userName = Model["UserName"]?.ToString() ?? "User";
    var restorationReason = Model["RestorationReason"]?.ToString() ?? "Issue resolved";
    var loginUrl = Model["LoginUrl"]?.ToString() ?? "#";
    var supportEmail = Model["SupportEmail"]?.ToString() ?? "support@connectflow.com";
    var today = DateTimeOffset.UtcNow.ToString("MMMM dd, yyyy");
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Account Access Restored</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            line-height: 1.6;
            color: #333333;
            background-color: #f8fafc;
            padding: 20px 0;
        }

        .container {
            max-width: 600px;
            margin: 0 auto;
            background-color: #ffffff;
            border-radius: 12px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
            overflow: hidden;
        }

        .header {
            background: linear-gradient(135deg, #059669 0%, #047857 100%);
            color: white;
            padding: 40px 30px;
            text-align: center;
        }

        .header h1 {
            font-size: 28px;
            font-weight: 700;
            margin-bottom: 8px;
        }

        .header p {
            font-size: 16px;
            opacity: 0.9;
        }

        .content {
            padding: 40px 30px;
        }

        .success-box {
            background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%);
            border: 1px solid #4ade80;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 30px;
            text-align: center;
        }

        .success-box .icon {
            font-size: 48px;
            color: #059669;
            margin-bottom: 15px;
            display: block;
        }

        .success-box h2 {
            color: #059669;
            font-size: 20px;
            font-weight: 600;
            margin-bottom: 10px;
        }

        .success-box p {
            color: #166534;
            font-size: 14px;
        }

        .message {
            background-color: #f9fafb;
            border-radius: 8px;
            padding: 25px;
            margin-bottom: 30px;
        }

        .message h3 {
            color: #1f2937;
            font-size: 18px;
            font-weight: 600;
            margin-bottom: 15px;
        }

        .message p {
            margin-bottom: 15px;
            color: #4b5563;
            line-height: 1.7;
        }

        .restoration-box {
            background: linear-gradient(135deg, #f0f9ff 0%, #dbeafe 100%);
            border: 1px solid #3b82f6;
            border-radius: 8px;
            padding: 15px;
            margin: 20px 0;
        }

        .restoration-box strong {
            color: #1d4ed8;
            font-weight: 600;
        }

        .restoration-box span {
            color: #1e40af;
        }

        .actions {
            text-align: center;
            margin: 30px 0;
        }

        .btn {
            display: inline-block;
            padding: 16px 32px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            font-size: 16px;
            transition: all 0.3s ease;
            margin: 8px;
        }

        .btn-success {
            background: linear-gradient(135deg, #059669 0%, #047857 100%);
            color: white;
            box-shadow: 0 4px 14px rgba(5, 150, 105, 0.3);
        }

        .btn-success:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(5, 150, 105, 0.4);
        }

        .welcome-back {
            background: linear-gradient(135deg, #fef3c7 0%, #fed7aa 100%);
            border: 1px solid #f59e0b;
            border-radius: 8px;
            padding: 20px;
            margin: 25px 0;
            text-align: center;
        }

        .welcome-back h4 {
            color: #92400e;
            font-size: 18px;
            font-weight: 600;
            margin-bottom: 10px;
        }

        .welcome-back p {
            color: #78350f;
            margin-bottom: 8px;
        }

        .features-list {
            list-style: none;
            padding: 0;
            margin: 20px 0;
        }

        .features-list li {
            padding: 8px 0;
            color: #4b5563;
            position: relative;
            padding-left: 25px;
        }

        .features-list li:before {
            content: "âœ“";
            color: #059669;
            font-weight: bold;
            position: absolute;
            left: 0;
        }

        .footer {
            background-color: #f8fafc;
            padding: 30px;
            border-top: 1px solid #e5e7eb;
            text-align: center;
        }

        .footer p {
            color: #6b7280;
            font-size: 14px;
            margin-bottom: 8px;
        }

        .footer .date {
            color: #9ca3af;
            font-size: 12px;
        }

        .footer a {
            color: #3b82f6;
            text-decoration: none;
        }

        .divider {
            height: 1px;
            background: linear-gradient(90deg, transparent 0%, #e5e7eb 50%, transparent 100%);
            margin: 25px 0;
        }

        @@media (max-width: 600px) {
            .container {
                margin: 0 10px;
                border-radius: 8px;
            }

            .header,
            .content,
            .footer {
                padding: 20px;
            }

            .header h1 {
                font-size: 24px;
            }

            .btn {
                display: block;
                margin: 10px 0;
            }
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="header">
            <h1>Access Restored</h1>
            <p>Your account access has been successfully restored</p>
        </div>

        <div class="content">
            <div class="success-box">
                <span class="icon">ðŸŽ‰</span>
                <h2>Welcome Back!</h2>
                <p>Your access to @tenantName has been fully restored</p>
            </div>

            <div class="message">
                <h3>Hello @userName,</h3>
                <p>Great news! Your access to <strong>@tenantName</strong> has been successfully restored and you can
                    now use all available features.</p>

                <div class="restoration-box">
                    <strong>Restoration Details:</strong> <span>@restorationReason</span>
                </div>

                <p>You now have full access to your account and can resume your work without any restrictions.</p>
            </div>

            <div class="welcome-back">
                <h4>ðŸš€ You're All Set!</h4>
                <p>Your account is now fully operational with access to:</p>
                <ul class="features-list">
                    <li>All workspace features and tools</li>
                    <li>Collaboration with team members</li>
                    <li>Data synchronization and backups</li>
                    <li>Customer support and resources</li>
                </ul>
            </div>

            <div class="divider"></div>

            <div class="actions">
                <a href="@loginUrl" class="btn btn-success">Access Your Account</a>
            </div>
        </div>

        <div class="footer">
            <p>Thank you for your patience during the temporary suspension.</p>
            <p>If you experience any issues, please contact us at <a href="mailto:@supportEmail">@supportEmail</a></p>
            <p class="date">Sent on @today</p>
        </div>
    </div>
</body>

</html>
