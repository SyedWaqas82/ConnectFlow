@{
    var tenantName = Model["tenantName"].ToString();
    var reason = Model["reason"]?.ToString() ?? "Subscription suspended";
    var subscriptionId = Model["subscriptionId"];
    var planName = Model["planName"]?.ToString() ?? "Current Plan";
    var suspendedAt = Model["suspendedAt"]?.ToString() ?? DateTime.UtcNow.ToString("MMMM dd, yyyy");
}

<!DOCTYPE html>
<html>

<head>
    <title>Subscription Suspended</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            color: #333;
        }

        .container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
        }

        .header {
            background: #ffc107;
            color: #333;
            padding: 20px;
            text-align: center;
            border-radius: 8px 8px 0 0;
        }

        .content {
            background: #f8f9fa;
            padding: 30px;
            border-radius: 0 0 8px 8px;
        }

        .warning-icon {
            font-size: 48px;
            color: #ffc107;
            text-align: center;
            margin-bottom: 20px;
        }

        .details {
            background: white;
            padding: 20px;
            border-radius: 8px;
            margin: 20px 0;
        }

        .button {
            background: #ffc107;
            color: #333;
            padding: 12px 24px;
            text-decoration: none;
            border-radius: 6px;
            display: inline-block;
            margin: 20px 0;
        }

        .footer {
            text-align: center;
            margin-top: 30px;
            font-size: 14px;
            color: #666;
        }

        .alert {
            background: #fff3cd;
            border: 1px solid #ffeaa7;
            padding: 15px;
            border-radius: 6px;
            margin: 20px 0;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="header">
            <h1>Subscription Suspended</h1>
        </div>
        <div class="content">
            <div class="warning-icon">⏸️</div>

            <h2>Hello @tenantName,</h2>

            <p>Your ConnectFlow subscription has been suspended. Access to your account and services has been
                temporarily restricted.</p>

            <div class="details">
                <h3>Suspension Details:</h3>
                <p><strong>Subscription ID:</strong> #@subscriptionId</p>
                <p><strong>Plan:</strong> @planName</p>
                <p><strong>Suspended On:</strong> @suspendedAt</p>
                <p><strong>Reason:</strong> @reason</p>
            </div>

            <div class="alert">
                <strong>What does this mean?</strong>
                <p>While your subscription is suspended, you will have limited or no access to ConnectFlow features.
                    Your data remains safe and will be restored once your subscription is reactivated.</p>
            </div>

            <h3>What you can do:</h3>
            <ul>
                <li>Update your payment method if this is payment-related</li>
                <li>Contact our support team for assistance</li>
                <li>Review your account settings</li>
            </ul>

            <a href="http://localhost:3000/billing" class="button">Reactivate Subscription</a>

            <p>If you believe this suspension was made in error or if you have any questions, please don't hesitate to
                contact our support team immediately.</p>
        </div>
        <div class="footer">
            <p>Best regards,<br />The ConnectFlow Team</p>
            <p><small>This is an automated message. Please do not reply to this email.</small></p>
        </div>
    </div>
</body>

</html>
