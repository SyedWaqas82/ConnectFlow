@{
    var tenantName = Model["tenantName"].ToString();
    var subscriptionId = Model["subscriptionId"];
    var planName = Model["planName"]?.ToString() ?? "Current Plan";
}

<!DOCTYPE html>
<html>

<head>
    <title>Grace Period Ended</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            color: #333;
        }

        .container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
        }

        .header {
            background: #dc3545;
            color: white;
            padding: 20px;
            text-align: center;
            border-radius: 8px 8px 0 0;
        }

        .content {
            background: #f8f9fa;
            padding: 30px;
            border-radius: 0 0 8px 8px;
        }

        .alert-icon {
            font-size: 48px;
            color: #dc3545;
            text-align: center;
            margin-bottom: 20px;
        }

        .details {
            background: white;
            padding: 20px;
            border-radius: 8px;
            margin: 20px 0;
        }

        .button {
            background: #dc3545;
            color: white;
            padding: 12px 24px;
            text-decoration: none;
            border-radius: 6px;
            display: inline-block;
            margin: 20px 0;
        }

        .footer {
            text-align: center;
            margin-top: 30px;
            font-size: 14px;
            color: #666;
        }

        .critical-alert {
            background: #f8d7da;
            border: 1px solid #f5c6cb;
            padding: 15px;
            border-radius: 6px;
            margin: 20px 0;
            color: #721c24;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="header">
            <h1>Grace Period Ended</h1>
        </div>
        <div class="content">
            <div class="alert-icon">ðŸš«</div>

            <h2>Hello @tenantName,</h2>

            <p>Your grace period has ended and your ConnectFlow subscription has been suspended due to unpaid invoices.
            </p>

            <div class="details">
                <h3>Account Status:</h3>
                <p><strong>Subscription ID:</strong> #@subscriptionId</p>
                <p><strong>Plan:</strong> @planName</p>
                <p><strong>Status:</strong> Suspended</p>
                <p><strong>Grace Period Ended:</strong> @DateTime.UtcNow.ToString("MMMM dd, yyyy")</p>
            </div>

            <div class="critical-alert">
                <strong>Service Suspended</strong>
                <p>Access to ConnectFlow has been suspended. Update your payment method immediately to restore service.
                </p>
            </div>

            <h3>To restore your service:</h3>
            <ol>
                <li>Update your payment method</li>
                <li>Pay any outstanding invoices</li>
                <li>Contact support if you need assistance</li>
            </ol>

            <a href="http://localhost:3000/billing" class="button">Update Payment Method</a>

            <p><strong>Important:</strong> Your data is safe, but continued delays may result in additional
                restrictions.</p>
        </div>
        <div class="footer">
            <p>Best regards,<br />The ConnectFlow Team</p>
        </div>
    </div>
</body>

</html>
