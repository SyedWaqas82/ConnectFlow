@{
    var tenantName = Model["tenantName"].ToString();
    var reason = Model["reason"]?.ToString() ?? "Subscription cancelled";
    var subscriptionId = Model["subscriptionId"];
    var planName = Model["planName"]?.ToString() ?? "Current Plan";
    var cancelledAt = Model["cancelledAt"]?.ToString() ?? DateTimeOffset.UtcNow.ToString("MMMM dd, yyyy");
    var isImmediate = Model["isImmediate"]?.ToString() == "True";
}

<!DOCTYPE html>
<html>

<head>
    <title>Subscription Cancelled</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            color: #333;
        }

        .container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
        }

        .header {
            background: #6c757d;
            color: white;
            padding: 20px;
            text-align: center;
            border-radius: 8px 8px 0 0;
        }

        .content {
            background: #f8f9fa;
            padding: 30px;
            border-radius: 0 0 8px 8px;
        }

        .sad-icon {
            font-size: 48px;
            color: #6c757d;
            text-align: center;
            margin-bottom: 20px;
        }

        .details {
            background: white;
            padding: 20px;
            border-radius: 8px;
            margin: 20px 0;
        }

        .button {
            background: #007bff;
            color: white;
            padding: 12px 24px;
            text-decoration: none;
            border-radius: 6px;
            display: inline-block;
            margin: 20px 0;
        }

        .footer {
            text-align: center;
            margin-top: 30px;
            font-size: 14px;
            color: #666;
        }

        .info-alert {
            background: #e7f3ff;
            border: 1px solid #b8daff;
            padding: 15px;
            border-radius: 6px;
            margin: 20px 0;
            color: #004085;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="header">
            <h1>Subscription Cancelled</h1>
        </div>
        <div class="content">
            <div class="sad-icon">ðŸ˜”</div>

            <h2>Goodbye @tenantName,</h2>

            @if (isImmediate)
            {
                <p>Your ConnectFlow subscription has been cancelled and access has been terminated immediately.</p>
            }
            else
            {
                <p>Your ConnectFlow subscription has been cancelled and is scheduled to end at the current billing period.
                    You'll continue to have access until then.</p>
            }

            <div class="details">
                <h3>Cancellation Details:</h3>
                <p><strong>Subscription ID:</strong> #@subscriptionId</p>
                <p><strong>Plan:</strong> @planName</p>
                <p><strong>Cancelled On:</strong> @cancelledAt</p>
                <p><strong>Reason:</strong> @reason</p>
                @if (isImmediate)
                {
                    <p><strong>Status:</strong> Immediately terminated</p>
                }
                else
                {
                    <p><strong>Status:</strong> Active until period end</p>
                }
            </div>

            @if (!isImmediate)
            {
                <div class="info-alert">
                    <strong>You still have access!</strong>
                    <p>Your subscription will remain active until the end of your current billing period. You can continue
                        using ConnectFlow until then.</p>
                </div>
            }

            <h3>What happens to your data?</h3>
            <ul>
                <li>Your data is safely stored and will be retained for 30 days</li>
                <li>You can export your data at any time during this period</li>
                <li>Reactivating your subscription will restore full access</li>
            </ul>

            <h3>We're sorry to see you go</h3>
            <p>If there's anything we could have done better or if you'd like to share feedback about your experience,
                we'd love to hear from you.</p>

            <a href="http://localhost:3000/reactivate" class="button">Reactivate Subscription</a>

            <p>Thank you for being part of the ConnectFlow community. If you ever decide to return, we'll be here to
                welcome you back!</p>
        </div>
        <div class="footer">
            <p>Best regards,<br />The ConnectFlow Team</p>
            <p><small>This is an automated message. Please do not reply to this email.</small></p>
        </div>
    </div>
</body>

</html>
