@{
    var tenantName = Model["tenantName"].ToString();
    var nextRetryDate = Model["nextRetryDate"]?.ToString();
    var failureCount = Model["failureCount"]?.ToString() ?? "1";
    var subscriptionId = Model["subscriptionId"];
    var planName = Model["planName"]?.ToString() ?? "Current Plan";
}

<!DOCTYPE html>
<html>

<head>
    <title>Payment Retry Scheduled</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            color: #333;
        }

        .container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
        }

        .header {
            background: #ffc107;
            color: #333;
            padding: 20px;
            text-align: center;
            border-radius: 8px 8px 0 0;
        }

        .content {
            background: #f8f9fa;
            padding: 30px;
            border-radius: 0 0 8px 8px;
        }

        .info-icon {
            font-size: 48px;
            color: #ffc107;
            text-align: center;
            margin-bottom: 20px;
        }

        .details {
            background: white;
            padding: 20px;
            border-radius: 8px;
            margin: 20px 0;
        }

        .button {
            background: #ffc107;
            color: #333;
            padding: 12px 24px;
            text-decoration: none;
            border-radius: 6px;
            display: inline-block;
            margin: 20px 0;
        }

        .footer {
            text-align: center;
            margin-top: 30px;
            font-size: 14px;
            color: #666;
        }

        .info-alert {
            background: #e7f3ff;
            border: 1px solid #b8daff;
            padding: 15px;
            border-radius: 6px;
            margin: 20px 0;
            color: #004085;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="header">
            <h1>Payment Retry Scheduled</h1>
        </div>
        <div class="content">
            <div class="info-icon">ðŸ”„</div>

            <h2>Hello @tenantName,</h2>

            <p>We will automatically retry processing your payment for your ConnectFlow subscription. No action is
                required from you at this time.</p>

            <div class="details">
                <h3>Retry Details:</h3>
                <p><strong>Subscription ID:</strong> #@subscriptionId</p>
                <p><strong>Plan:</strong> @planName</p>
                <p><strong>Attempt Number:</strong> @failureCount</p>
                @if (!string.IsNullOrEmpty(nextRetryDate))
                {
                    <p><strong>Next Retry Date:</strong> @nextRetryDate</p>
                }
            </div>

            <div class="info-alert">
                <strong>Automatic Retry Process</strong>
                <p>We'll automatically attempt to process your payment again. If the retry is successful, you'll receive
                    a confirmation email.</p>
            </div>

            <h3>To ensure a successful retry:</h3>
            <ul>
                <li>Ensure sufficient funds are available in your account</li>
                <li>Verify your payment method is still valid</li>
                <li>Check that your billing information is up to date</li>
                <li>Contact your bank if you have any restrictions</li>
            </ul>

            <a href="http://localhost:3000/billing" class="button">Review Payment Method</a>

            <p>If you prefer to update your payment information before the automatic retry, you can do so through your
                billing settings.</p>

            <p>If you have any questions or concerns, please don't hesitate to contact our support team.</p>
        </div>
        <div class="footer">
            <p>Best regards,<br />The ConnectFlow Team</p>
            <p><small>This is an automated message. Please do not reply to this email.</small></p>
        </div>
    </div>
</body>

</html>
