@{
    var tenantName = Model["TenantName"]?.ToString() ?? "Organization";
    var userName = Model["UserName"]?.ToString() ?? "User";
    var suspensionReason = Model["SuspensionReason"]?.ToString() ?? "Plan limitations";
    var contactEmail = Model["ContactEmail"]?.ToString() ?? "support@connectflow.com";
    var loginUrl = Model["LoginUrl"]?.ToString() ?? "#";
    var today = DateTime.UtcNow.ToString("MMMM dd, yyyy");
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Account Access Suspended</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            line-height: 1.6;
            color: #333333;
            background-color: #f8fafc;
            padding: 20px 0;
        }

        .container {
            max-width: 600px;
            margin: 0 auto;
            background-color: #ffffff;
            border-radius: 12px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
            overflow: hidden;
        }

        .header {
            background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%);
            color: white;
            padding: 40px 30px;
            text-align: center;
        }

        .header h1 {
            font-size: 28px;
            font-weight: 700;
            margin-bottom: 8px;
        }

        .header p {
            font-size: 16px;
            opacity: 0.9;
        }

        .content {
            padding: 40px 30px;
        }

        .alert-box {
            background: linear-gradient(135deg, #fef2f2 0%, #fecaca 100%);
            border: 1px solid #f87171;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 30px;
            text-align: center;
        }

        .alert-box .icon {
            font-size: 48px;
            color: #dc2626;
            margin-bottom: 15px;
            display: block;
        }

        .alert-box h2 {
            color: #dc2626;
            font-size: 20px;
            font-weight: 600;
            margin-bottom: 10px;
        }

        .alert-box p {
            color: #7f1d1d;
            font-size: 14px;
        }

        .message {
            background-color: #f9fafb;
            border-radius: 8px;
            padding: 25px;
            margin-bottom: 30px;
        }

        .message h3 {
            color: #1f2937;
            font-size: 18px;
            font-weight: 600;
            margin-bottom: 15px;
        }

        .message p {
            margin-bottom: 15px;
            color: #4b5563;
            line-height: 1.7;
        }

        .reason-box {
            background: linear-gradient(135deg, #fef3c7 0%, #fed7aa 100%);
            border: 1px solid #f59e0b;
            border-radius: 8px;
            padding: 15px;
            margin: 20px 0;
        }

        .reason-box strong {
            color: #92400e;
            font-weight: 600;
        }

        .reason-box span {
            color: #78350f;
        }

        .actions {
            text-align: center;
            margin: 30px 0;
        }

        .btn {
            display: inline-block;
            padding: 14px 28px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            font-size: 16px;
            transition: all 0.3s ease;
            margin: 8px;
        }

        .btn-primary {
            background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
            color: white;
            box-shadow: 0 4px 14px rgba(59, 130, 246, 0.3);
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(59, 130, 246, 0.4);
        }

        .contact-info {
            background: linear-gradient(135deg, #e0f2fe 0%, #b3e5fc 100%);
            border: 1px solid #0ea5e9;
            border-radius: 8px;
            padding: 20px;
            margin: 25px 0;
            text-align: center;
        }

        .contact-info h4 {
            color: #0369a1;
            font-size: 16px;
            font-weight: 600;
            margin-bottom: 10px;
        }

        .contact-info p {
            color: #075985;
            margin-bottom: 8px;
        }

        .contact-info a {
            color: #0284c7;
            text-decoration: none;
            font-weight: 500;
        }

        .footer {
            background-color: #f8fafc;
            padding: 30px;
            border-top: 1px solid #e5e7eb;
            text-align: center;
        }

        .footer p {
            color: #6b7280;
            font-size: 14px;
            margin-bottom: 8px;
        }

        .footer .date {
            color: #9ca3af;
            font-size: 12px;
        }

        .divider {
            height: 1px;
            background: linear-gradient(90deg, transparent 0%, #e5e7eb 50%, transparent 100%);
            margin: 25px 0;
        }

        @@media (max-width: 600px) {
            .container {
                margin: 0 10px;
                border-radius: 8px;
            }

            .header,
            .content,
            .footer {
                padding: 20px;
            }

            .header h1 {
                font-size: 24px;
            }

            .btn {
                display: block;
                margin: 10px 0;
            }
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="header">
            <h1>Account Access Suspended</h1>
            <p>Important notification about your account</p>
        </div>

        <div class="content">
            <div class="alert-box">
                <span class="icon">ðŸš«</span>
                <h2>Access Temporarily Suspended</h2>
                <p>Your access to @tenantName has been temporarily suspended</p>
            </div>

            <div class="message">
                <h3>Hello @userName,</h3>
                <p>We're writing to inform you that your access to <strong>@tenantName</strong> has been temporarily
                    suspended.</p>

                <div class="reason-box">
                    <strong>Suspension Reason:</strong> <span>@suspensionReason</span>
                </div>

                <p>This suspension is typically temporary and is related to your organization's subscription plan or
                    usage limits. Your account data remains safe and secure.</p>

                <p>To resolve this issue and restore your access, please contact your organization administrator or
                    reach out to our support team.</p>
            </div>

            <div class="divider"></div>

            <div class="actions">
                <a href="@loginUrl" class="btn btn-primary">Try Accessing Account</a>
            </div>

            <div class="contact-info">
                <h4>Need Help?</h4>
                <p>Contact your organization administrator or our support team</p>
                <p>Email: <a href="mailto:@contactEmail">@contactEmail</a></p>
            </div>
        </div>

        <div class="footer">
            <p>This is an automated message from ConnectFlow.</p>
            <p>If you believe this suspension was made in error, please contact support immediately.</p>
            <p class="date">Sent on @today</p>
        </div>
    </div>
</body>

</html>
